
<div class="col-md-6">
    {{form-group
        type=text
        changeset=user
        label="First Name"
        required=true
        property="firstName"
        validateProperty=(action validateProperty user "firstName" validations)
    }}
</div>

<div class="col-md-6">
    {{form-group
        type=text
        changeset=user
        label="Last Name"
        required=true
        property="lastName"
        validateProperty=(action validateProperty user "lastName")
    }}
</div>

<div class="col-md-6">
    {{form-group
        type=text
        changeset=address
        label="Country"
        required=true
        property="country"
        validateProperty=(action validateProperty address "country")
    }}
</div>

<div class="col-md-6">
    {{form-group
        type=text
        changeset=address
        label="Town"
        required=true
        property="town"
        validateProperty=(action validateProperty address "town")
    }}
</div>

<div class="col-md-12" style="margin-top: 25px;">
    {{#if user.isInvalid}}
        <button disabled=true type="button" class="btn btn-primary" {{action back user}}>{{backText}}</button>
        <button disabled=true type="submit" class="btn btn-default" {{action save user}}>{{saveText}}</button>
    {{else}}
        {{#if address.isInvalid}}
            <button disabled=true type="button" class="btn btn-primary" {{action back user}}>{{backText}}</button>
            <button disabled=true type="submit" class="btn btn-default" {{action save user}}>{{saveText}}</button>
        {{else}}
            <button type="button" class="btn btn-primary" {{action back user}}>{{backText}}</button>
            <button type="submit" class="btn btn-default" {{action save user}}>{{saveText}}</button>
        {{/if}}
    {{/if}}
</div>


