
<div class="col-md-6 myInput">
    <div>
        <div><label>First Name</label></div>
        {{input type="text" value=changeset.firstName}} model value: {{model.firstName}}
        <div style="position: absolute; color: red;">
            <small>
                {{#each (get (get changeset '_errors.firstName') 'validation') as |message index|}}
                    {{#if (eq index 0)}}
                        {{message}}
                    {{/if}}
                {{/each}}
            </small>
        </div>
    </div>
</div>

