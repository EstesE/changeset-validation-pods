<div class="col-md-12" style="margin-top: 25px;">
    {{#if changeset.isInvalid}}
        <button disabled=true type="button" class="btn btn-primary">{{backText}}</button>
        <button disabled=true type="button" class="btn btn-default">{{saveText}}</button>
    {{else}}
        <button type="button" class="btn btn-primary" {{action back changeset}}>{{backText}}</button>
        <button type="button" class="btn btn-default" {{action save changeset}}>{{saveText}}</button>
    {{/if}}
    {{#if changeset.isDirty}}
        <button class="btn btn-success" {{action reset changeset}}>Reset</button>
    {{else if changeset.isInvalid}}
        <button class="btn btn-success" {{action reset changeset}}>Reset</button>
    {{else}}
        <button disabled=true class="btn btn-success">Reset</button>
    {{/if}}
</div>

